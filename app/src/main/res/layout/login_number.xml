<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/mem_travel2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memtxt1"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginStart="100px"
            android:layout_marginLeft="100px"
            android:layout_weight="1"
            android:text="아이디"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/memID"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100px"
            android:layout_marginRight="100px"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memtxt2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginStart="100px"
            android:layout_marginLeft="100px"
            android:layout_weight="1"
            android:text="비밀번호"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/memPW"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100px"
            android:layout_marginRight="100px"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="40px"
            android:layout_marginRight="40px"
            android:layout_weight="1"
            android:text="로그인"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="100px"
            android:layout_marginRight="100px"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        >

        <TextView
            android:id="@+id/memPwFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120px"
            android:layout_marginLeft="120px"
            android:layout_marginEnd="100px"
            android:layout_marginRight="100px"
            android:layout_weight="1"
            android:text="비밀번호 찾기"
            android:textColor="#007BB3"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>